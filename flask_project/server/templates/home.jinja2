{% extends 'layout.html' %}

{% block content1 %}
    <div style="width: 50vw;">
    <form method="POST">
    {{ form.csrf_token }}
        <fieldset>
        <div>
            {{ form.email.label }}
            {{ form.email(style="width: 95%") }}
        </div>
        {% if form.email.errors %}
            <ul>
                {% for error in form.email.errors %}
                    <li>
                        {{ error }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <div>
            {{ form.password.label }}
            {{ form.password(style="width: 95%") }}
        </div>
        {% if form.password.errors %}
            <ul>
                {% for error in form.password.errors %}
                    <li>
                        {{ error }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <div>
            {{ form.login }}
            {{ form.signup(formnovalidate=True) }}
        </form>
        </fieldset>
    </form>
    </div>

{% endblock %}