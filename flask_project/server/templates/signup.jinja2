{% extends 'layout.html' %}

{% block content1 %}
    <div>
        <h2>Signup</h2>
    </div>

    <div style="width: 50vw;">
    <form method="POST">
        <fieldset>

        <div>
        {{ form.first_name.label }}
        </div>

        <div>
        {{ form.first_name(style="width: 95%") }}
        </div>

        {% if form.first_name.errors %}
        <ul>
            {% for error in form.first_name.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        </fieldset>
        
        <fieldset>
        
        <div>
        {{ form.last_name.label }}
        </div>

        <div>
        {{ form.last_name(style="width: 95%") }}
        </div>

        {% if form.last_name.errors %}
        <ul>
            {% for error in form.last_name.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        </fieldset>

        <fieldset>
        <div>
        {{ form.email.label }}
        </div>

        <div>
        {{ form.email(style="width: 95%") }}
        </div>

        {% if form.email.errors %}
        <ul>
            {% for error in form.email.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        </fieldset>

        <fieldset>

        <div>
        {{ form.password.label }}
        </div>

        <div>
        {{ form.password(style="width: 95%") }}
        </div>

        {% if form.password.errors %}
        <ul>
            {% for error in form.password.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        </fieldset>

        <fieldset>

        <div>
        {{ form.confirm.label }}
        </div>

        <div>
        {{ form.confirm(style="width: 95%") }}
        </div>

        {% if form.confirm.errors %}
        <ul>
            {% for error in form.confirm.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        </fieldset>

        {{ form.submit }}
        {{ form.goback(formnovalidate=True) }}
        </form>
    </div>

{% endblock %}